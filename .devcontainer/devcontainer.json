{
  "name": "Independence 2026 - Village",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "npm install -g openclaw && npm run setup",
  "portsAttributes": {
    "3000": {
      "label": "OpenClaw Gateway",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Village Web UI",
      "onAutoForward": "notify"
    }
  },
  "workspaceFolder": "/workspace/independence-2026",
  "onCreateCommand": "chmod +x setup-village.sh"
}
